#!/bin/bash
echo -n > /var/log/xray/access.log
sleep 4
data=( `ls /etc/funny/limit/trojan/ip`);
    for user in "${data[@]}"
    do
        iplimit=$(cat /etc/funny/limit/trojan/ip/$user)
        ehh=$(cat /var/log/xray/access.log | tail -n 500 | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq);
        cekcek=$(echo -e "$ehh" | wc -l);
        if [[ $cekcek -gt $iplimit ]]; then
            exp=$(grep -w "^#! $user" "/etc/xray/config.json" | cut -d ' ' -f 3 | sort | uniq)
                  sed -i "/^#! $user $exp/,/^},{/d" /etc/xray/config.json
                  sed -i "/^#! $user $exp/,/^},{/d" /etc/xray/config.json
                  sed -i "/^#! $user $exp/d" /etc/trojan/.trojan.db
                  systemctl restart xray >> /dev/null 2>&1
                  jum2=$(cat /tmp/iptrojan.txt | wc -l)
                  rm -rf /etc/funny/limit/trojan/ip/$user
                  rm -fr /etc/funny/limit/trojan/quota/$user
                  send_log
                else
            echo ""
        fi
        sleep 0.1
    done